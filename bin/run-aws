#!/bin/bash

if [ "$#" -eq 0 ] ; then
  echo "Defaulting to aws.dev. Use '$0 prd' for aws.prd or '$0 stg' for aws.stg"
fi

env=${1:-dev}

if [ "${env}" != "prd" ] && [ "${env}" != "stg" ] && [ "${env}" != "dev" ] ; then
  echo "Invalid env $env. Supported environments: prd, stg and dev (default)"
  exit 1
fi


GATEWAY_HOST=aws.${env}.api.token.io
BANK_HOST=aws.fank.${env}.api.token.io

echo "Gateway: ${GATEWAY_HOST}"
echo "Fank: ${BANK_HOST}"

./gradlew \
  -DTOKEN_GATEWAY=${GATEWAY_HOST}:9000 \
  -DTOKEN_BANK=${BANK_HOST}:9100 \
  cleanTest test

